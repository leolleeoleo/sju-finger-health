<?xml version='1.0' encoding='UTF-8'?>

<!-- =========== FULL CONFIGURATION FILE ================================== -->

<faces-config version="2.0"
              xmlns="http://java.sun.com/xml/ns/javaee" 
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
                  
    <application>
        <local-config>
            <default-locale>zh_TW</default-locale>
            <supported-locale>en</supported-locale>
        </local-config>
    </application>
    <navigation-rule>        
        <from-view-id>/*</from-view-id>        
        <navigation-case>            
            <from-outcome>HOME</from-outcome>
            <to-view-id>/servlet/faces/index.jsp</to-view-id>
        </navigation-case>
        <navigation-case>            
            <from-outcome>LOGON</from-outcome>            
            <to-view-id>/servlet/faces/member.jsp</to-view-id>        
        </navigation-case>
        <navigation-case>            
            <from-outcome>LOGIN</from-outcome>            
            <to-view-id>/servlet/faces/login.jsp</to-view-id>        
        </navigation-case> 
    </navigation-rule>     
             
    <managed-bean>        
        <managed-bean-name>user</managed-bean-name>        
        <managed-bean-class>edu.sju.ee98.health.web.beans.UserBean</managed-bean-class>        
        <managed-bean-scope>session</managed-bean-scope>    
    </managed-bean>

</faces-config>
